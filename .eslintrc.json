{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "overrides": [
        {
            "files": ["*.js"],
            "rules": {
                "indent": ["error", 4],
                "require-jsdoc": "off",
                "max-len": "off",
                "space-before-function-paren": "off",
                "new-cap": "off"
            }
        }
    ]
}